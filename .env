# ───────── TELEGRAM API ─────────
# Get these from https://my.telegram.org/apps
API_ID=XXXXX
API_HASH=XXXXXXXXXXXXXXXXXX


# ───────── SOURCE ─────────
# Comma-separated list. Supports:
#   -1001234567890          (channel/group/supergroup ID)
#   -1001234567890:34       (topic ID 34 in that chat)
#   @username               (public username)
#   @username:12            (topic ID 12 in that username)

SOURCES=@sourcechnnel,-1001234567890:34


# ───────── DESTINATION ─────────
# Same format as SOURCES
DESTINATIONS=-1003558485642:2,@destinationchannel


# ───────── CONTENTS ─────────
# Set to True to transfer, False to skip
PHOTOS=True
VIDEOS=True
TEXT=True


# ───────── FORWARD MODE ─────────
# HIDE_SENDER=true  → uses copy_message (hides original sender, appears as your account)
# HIDE_SENDER=false → uses forward_messages (shows original sender)
HIDE_SENDER=true

# DROP_CAPTION=true  → removes caption from photos/videos
# DROP_CAPTION=false → keeps original caption
DROP_CAPTION=false