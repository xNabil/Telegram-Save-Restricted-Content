# ───────── TELEGRAM API (DUMMY VALUES) ─────────
API_ID=12345678
API_HASH=your_api_hash_here_32_chars

# ───────── SOURCE ─────────
# username, @username, or chat_id
# for topics: chat_id:topic_id or @channel:topic_id
SOURCES=@source_channel

# ───────── DESTINATION ─────────
# same format rules apply
DESTINATIONS=-1001234567890:123

# ───────── MEDIA FILTERS ─────────
PHOTOS=True
VIDEOS=True
TEXT=True

# ───────── OPTIONS ─────────
HIDE_SENDER=True          # True = copy (no forward trace), False = forward (shows original sender)
DROP_CAPTION=False        # True = remove caption/text, False = keep it
SAVE_TO_LOCAL=False       # True = save media to /downloads/{channel_title}/ as message_id
FORWARDING=True           # Try direct forwarding when possible (fast, preserves metadata)

# ───────── FORWARDING ONLY MODE ─────────
# If True → ONLY forward messages.
# If forwarding fails (restricted), skip entirely.
# No download / re-upload fallback.
FORWARDING_ONLY=False
